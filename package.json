{
  "name": "bigint-conversion",
  "version": "2.1.2",
  "description": "Convert to/from BigInt from/to buffer, hex string, utf8-encoded text string.",
  "keywords": [
    "BigInt",
    "bignum",
    "big integer",
    "text",
    "utf8",
    "hex",
    "Buffer",
    "ArrayBuffer"
  ],
  "license": "MIT",
  "author": {
    "name": "Juan HernÃ¡ndez Serrano",
    "email": "jserrano@entel.upc.edu",
    "url": "https://github.com/juanelas"
  },
  "repository": "github:juanelas/bigint-conversion",
  "main": "./dist/bigint-conversion-latest.node.js",
  "browser": "./dist/bigint-conversion-latest.browser.mod.min.js",
  "types": "./types/bigint-conversion.d.ts",
  "directories": {
    "build": "./build",
    "dist": "./dist",
    "src": "./src",
    "test": "./test",
    "types": "/types"
  },
  "scripts": {
    "test": "mocha",
    "build:js": "node build/build.rollup.js",
    "build:standard": "standard --fix",
    "build:browserTests": "node build/build.browser.tests.js",
    "build:docs": "jsdoc2md --template=./src/readme-template.hbs --files ./src/main.js > README.md",
    "build:dts": "node build/build.dts.js",
    "build": "run-s build:**",
    "prepublishOnly": "npm run build"
  },
  "standard": {
    "env": [
      "mocha"
    ],
    "globals": [
      "BigInt",
      "Blob",
      "postMessage",
      "self",
      "Worker"
    ],
    "ignore": [
      "/test/browser/",
      "*.browser.js",
      "*.mod.min.js"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-replace": "^2.3.1",
    "chai": ">=4.2.0",
    "eslint": "^6.8.0",
    "jsdoc-to-markdown": "^5.0.3",
    "mocha": "^7.1.1",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.32.1",
    "rollup-plugin-babel-minify": "^9.1.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-multi-entry": ">=2.1.0",
    "rollup-plugin-node-resolve": ">=5.2.0",
    "standard": "^14.3.3",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@types/node": ">=10"
  }
}
