{
  "name": "bigint-conversion",
  "version": "2.1.4",
  "description": "Convert to/from BigInt from/to buffer, hex string, utf8-encoded text string.",
  "keywords": [
    "BigInt",
    "bignum",
    "big integer",
    "text",
    "utf8",
    "hex",
    "Buffer",
    "ArrayBuffer"
  ],
  "license": "MIT",
  "author": {
    "name": "Juan HernÃ¡ndez Serrano",
    "email": "j.hernandez@upc.edu",
    "url": "https://github.com/juanelas"
  },
  "repository": "github:juanelas/bigint-conversion",
  "main": "./lib/index.node.js",
  "browser": "./lib/index.browser.mod.js",
  "types": "./types/index.d.ts",
  "directories": {
    "build": "./build",
    "lib": "./lib",
    "src": "./src",
    "test": "./test",
    "types": "/types"
  },
  "scripts": {
    "test": "nyc --check-coverage mocha && nyc report --reporter=text-lcov | coveralls",
    "build:js": "rollup -c build/rollup.config.js",
    "build:standard": "standard --fix",
    "build:browserTests": "rollup -c build/rollup.tests.config.js",
    "build:docs": "node build/build.docs.js",
    "build:dts": "node build/build.dts.js",
    "build": "run-s build:**",
    "preversion": "npm run build && git commit -a -m \"ready for versioning\"",
    "postversion": "git push"
  },
  "standard": {
    "env": [
      "mocha"
    ],
    "globals": [
      "BigInt"
    ],
    "ignore": [
      "/test/browser/",
      "/lib/index.browser.bundle.iife.js",
      "/lib/index.browser.bundle.mod.js"
    ]
  },
  "dependencies": {
    "@types/node": ">=10"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-multi-entry": "^3.0.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@rollup/plugin-replace": "^2.3.1",
    "chai": "^4.2.0",
    "coveralls": "^3.0.11",
    "jsdoc-to-markdown": "^5.0.3",
    "mocha": "^7.1.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.1",
    "rollup": "^2.6.1",
    "rollup-plugin-terser": "^5.3.0",
    "standard": "^14.3.3",
    "typescript": "^3.8.3"
  }
}
